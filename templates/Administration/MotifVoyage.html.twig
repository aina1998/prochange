{% extends 'admin.html.twig' %}

{% block title %}Motif de voyage{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">

                {% include "Partials/Flash.html.twig" %}

                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-truck-moving"></i> MOTIF DE VOYAGE</h3>
                    <a href="{{ path("add-motif-voyage") }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter un motif de voyage</a>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Motif de voyage</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listMotifVoyage in listMotifVoyages %}
                        <tr>
                            <th scope="row">{{ listMotifVoyage.id }}</th>
                            <td>{{ listMotifVoyage.MotifVoyageValue }}</td>
                            <td class="text-center col-2">
                                <a href="{{ path("delete-motif-voyage", {'MotifVoyageValue' : listMotifVoyage.MotifVoyageValue}) }}" class="btn btn-danger"><i class="fad fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="float-end">
                    <div class="btn-group">
                        <a href="{{ path('print-motif-voyage') }}" target="_blank" class="btn btn-success"><i class="fad fa-print"></i> Imprimer la liste</a>
                        <a href="#" class="btn btn-danger"><i class="fad fa-trash-alt"></i> Supprimer tout</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
    </div>

{% endblock %}
