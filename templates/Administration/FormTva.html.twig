{% extends 'admin.html.twig' %}

{% block title %}Taux de valeur ajoutée{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">
                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-percent"></i> TAUX DE VALEUR AJOUTEE (T.V.A)</h3>
                    <a href="{{ path("taxe") }}" class="btn btn-dark"><i class="fad fa-arrow-alt-circle-left"></i> Retour à la liste</a>
                </div>
                <div class="col-md-6 mt-5">
                    {{ form_start(FormTva) }}
                    {{ form_row(FormTva.TauxValue) }}
                    <button type="submit" class="btn btn-primary"><i class="fad fa-check"></i> Enregistrer</button>
                    {{ form_end(FormTva) }}
                </div>
            </div>
        </main>
    </div>

{% endblock %}
