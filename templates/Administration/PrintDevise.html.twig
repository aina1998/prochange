{% extends 'base.html.twig' %}

{% block title %}Impression Devise{% endblock %}

{% block body %}

    <body onload="javascript:window.print()">
    <div class="container mt-3">
        <div class="text-center">
            <img src="{{ asset("Assets/css/Logo-prochange.jpeg") }}" alt="Logo Prochange" width="300px">
        </div>
        <h3 class="text-center mt-3"><i class="fad fa-badge-dollar"></i> Liste des devises</h3>

        <hr>

        <table class="table table-bordered mt-4">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Devise</th>
            </tr>
            </thead>
            <tbody>
            {% for listDevise in listDevises %}
                <tr>
                    <th scope="row">{{ listDevise.id }}</th>
                    <td>{{ listDevise.DeviseValue }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </body>

{% endblock %}