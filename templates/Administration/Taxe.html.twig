{% extends 'admin.html.twig' %}

{% block title %}Taux de valeur ajoutée{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">

                {% include "Partials/Flash.html.twig" %}

                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-percent"></i> TAUX DE VALEUR AJOUTEE (T.V.A)</h3>
                    <a href="{{ path('add-taxe') }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter un TVA</a>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Taux de valeur ajoutée</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listTva in listTvas %}
                        <tr>
                            <td scope="row">{{ listTva.id }}</td>
                            <td scope="row">{{ listTva.TauxValue }} <i class="fad fa-percentage"></i></td>
                            <td class="text-center col-2">
                                <a href="{{ path("delete-taxe", {'TauxValue' : listTva.TauxValue}) }}" class="btn btn-outline-danger"><i class="fad fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="float-end">
                    <div class="btn-group">
                        <a href="{{ path("print-taxe") }}" target="_blank" class="btn btn-success"><i class="fad fa-print"></i> Imprimer la liste</a>
                        <a href="#" class="btn btn-danger"><i class="fad fa-trash-alt"></i> Supprimer tout</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
    </div>

{% endblock %}
