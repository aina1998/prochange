{% extends 'admin.html.twig' %}

{% block title %}Devises{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">

                {% include "Partials/Flash.html.twig" %}

                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-badge-dollar"></i> DEVISE</h3>
                    <a href="{{ path("add-devise") }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter une devise</a>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Devises</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listDevise in listDevises %}
                        <tr>
                            <th scope="row">{{ listDevise.id }}</th>
                            <td>{{ listDevise.DeviseValue }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="float-end">
                    <div class="btn-group">
                        <a href="{{ path("print-devise") }}" target="_blank" class="btn btn-success"><i class="fad fa-print"></i> Imprimer la liste</a>
                        <a href="#" class="btn btn-danger"><i class="fad fa-trash-alt"></i> Supprimer tout</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
    </div>

{% endblock %}
