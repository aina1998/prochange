{% extends 'admin.html.twig' %}

{% block title %}Type de document{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">

                {% include 'Partials/Flash.html.twig' %}

                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-passport"></i> TYPE DE DOCUMENT</h3>
                    <a href="{{ path("add-type-document") }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter un type de document</a>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Type de document</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listTypeDocument in listTypeDocuments %}
                        <tr>
                            <th scope="row">{{ listTypeDocument.id }}</th>
                            <td>{{ listTypeDocument.TypeDocumentValue }}</td>
                            <td class="text-center col-2">
                                <a href="{{ path('delete-type-document', {'TypeDocumentValue' : listTypeDocument.TypeDocumentValue}) }}" class="btn btn-danger"><i class="fad fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="float-end">
                    <div class="btn-group">
                        <a href="{{ path('print-type-document') }}" target="_blank" class="btn btn-success"><i class="fad fa-print"></i> Imprimer la liste</a>
                        <a href="#" class="btn btn-danger"><i class="fad fa-trash-alt"></i> Supprimer tout</a>
                    </div>
                </div>
            </div>
        </main>
    </div>
    </div>

{% endblock %}
