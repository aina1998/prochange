{% extends 'base.html.twig' %}

{% block title %}Impression motif de voyage{% endblock %}

{% block body %}

    <body onload="javascript:window.print()">
    <div class="container mt-3">
        <div class="text-center">
            <img src="{{ asset("Assets/css/Logo-prochange.jpeg") }}" alt="Logo Prochange" width="300px">
        </div>
        <h3 class="text-center mt-3"><i class="fad fa-truck-moving"></i> Liste motif de voyage</h3>

        <hr>

        <table class="table table-bordered mt-4">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Motif de voyage</th>
            </tr>
            </thead>
            <tbody>
            {% for PrintMotifVoyage in PrintMotifVoyages %}
                <tr>
                    <th scope="row">{{ PrintMotifVoyage.id }}</th>
                    <td>{{ PrintMotifVoyage.MotifVoyageValue }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </body>

{% endblock %}