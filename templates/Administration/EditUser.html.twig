{% extends 'admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">
                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-user-circle"></i> UTILISATEUR <span class="text-primary">{{ editUser.pseudo }}</span></h3>
                    <a href="{{ path("list-user") }}" class="btn btn-dark">< Retour à la liste</a>
                </div>
                <div class="col-md-6 mt-5">
                    {{ form_start(formEditUser) }}
                    {{ form_row(formEditUser.pseudo) }}
                    {{ form_row(formEditUser.email) }}
                    <button type="submit" class="btn btn-primary"><i class="fad fa-check"></i> Enregistrer</button>
                    {{ form_end(formEditUser) }}
                    <div class="mt-3"><strong>Compte créer le : <span class="text-warning">{{ editUser.createdAt | date('d/m/Y') }}</span></strong></div>
                </div>
            </div>
        </main>
    </div>

{% endblock %}
