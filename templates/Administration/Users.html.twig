{% extends 'admin.html.twig' %}

{% block title %}Listes des utilisateurs{% endblock %}

{% block body %}

    <div id="layoutSidenav_content" class="mt-5">
        <main>
            <div class="container-fluid px-4">

                {% include "Partials/Flash.html.twig" %}

                <div class="d-flex justify-content-between">
                    <h3 class="text-black-50"><i class="fad fa-user-circle"></i> LISTE DES UTILISATEURS</h3>
                    <a href="{{ path("account-register") }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter un utilisateur</a>
                </div>

                <table class="table table-bordered mt-5">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom d'utilisateur</th>
                        <th scope="col">Adresse e-mail</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Date d'enregistrement</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listUser in listUsers %}
                        <tr>
                            <th scope="row">{{ listUser.id }}</th>
                            <td>{{ listUser.pseudo }}</td>
                            <td>{{ listUser.email }}</td>
                            <td>{{ listUser.slug }}</td>
                            <td>Date</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="float-end">
                    <div class="btn-group">
                        <a href="" class="btn btn-danger"><i class="fad fa-trash-alt"></i> Supprimer la liste</a>
                    </div>
                </div>
            </div>
        </main>
    </div>

{% endblock %}
