{% extends 'base.html.twig' %}

{% block title %}Accès à l'administration{% endblock %}

{% block body %}

    <div class="container mt-lg-5">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                {% if hasError %}
                    <div class="alert alert-danger">
                        <p>Votre <strong>Nom d'utilisateur</strong> ou <strong>Mot de passe</strong> est invalide.</p>
                    </div>
                {% endif %}

                <div class="card bg-light">
                    <div class="card-header py-3">
                        <h3 class="card-title text-center titre-guichet text-black-50">
                            <i class="fad fa-lock-alt fa-2x"></i><br>
                            Interface d'administration
                        </h3>
                    </div>
                    <div class="card-body px-lg-5 py-lg-5">
                        <form method="post">
                            <div class="form-group">
                                <label for="_username" class="form-label">Nom d'utilisateur :</label>
                                <input type="text" class="form-control" name="_username" placeholder="Nom d'utilisateur" value="{{ username }}" required>
                            </div>
                            <div class="form-group mt-2">
                                <label for="_password" class="form-label">Mot de passe :</label>
                                <input type="password" class="form-control" name="_password" placeholder="Mot de passe" required>
                            </div>
                            <div class="form-group mt-2 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary"><i class="fad fa-lock-open-alt"></i> Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <a href="{{ path('account-login') }}" class="mt-2 url text-success d-flex justify-content-center">
                Se connecter en tant que guichetier
            </a>
        </div>

    </div>

{% endblock %}
