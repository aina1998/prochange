{% extends 'base.html.twig' %}

{% block title %}Listes des Clients{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="text-center titre-guichet"><i class="fad fa-id-card"></i><br>Listes des clients</h1>
        <p class="text-center text-black-50">Compte de <span class="text-success text-break">Aina Fenomanitra</span></p>
        <div class="text-center">
            <a href="{{ path("guichet") }}" class="btn btn-outline-primary"><i class="fad fa-home-alt"></i> Tableau de bord</a>
            <a href="{{ path("buy") }}" class="btn btn-outline-dark"><i class="fad fa-money-check-alt"></i> Listes des achats</a>
            <a href="{{ path("sales") }}" class="btn btn-outline-dark"><i class="fad fa-money-bill-alt"></i> Listes des ventes</a>
            <a href="{{ path('account-logout') }}" class="btn btn-outline-danger"><i class="fad fa-sign-out-alt"></i> DÃ©connexion</a>
        </div>
        <hr>
    </div>

    <div class="container-fluid mt-lg-5">
        <div class="float-end mb-3">
            <div class="btn-group">
                <a href="{{ path('add-clients') }}" class="btn btn-primary"><i class="fad fa-plus"></i> Ajouter un client</a>
                <a href="#" class="btn btn-success"><i class="fad fa-print"></i> Imprimer la liste</a>
            </div>
        </div>

            {% include "Partials/Flash.html.twig" %}

            <table class="table table-bordered mt-5">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date d'enregistrement</th>
                    <th scope="col">Nom complet</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Type de document</th>
                    <th scope="col">Numero du document</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for listClient in listClients %}
                <tr>
                    <th scope="row">{{ listClient.id }}</th>
                    <td>{{ listClient.createdAt | date('d/m/Y') }}</td>
                    <td>{{ listClient.fullName }}</td>
                    <td>{{ listClient.adresse }}</td>
                    <td>{{ listClient.documents }}</td>
                    <td>{{ listClient.documentValue }}</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a href="{{ path('add-buy', {'slug' : listClient.slug}) }}" class="btn btn-success"><i class="fad fa-money-check-alt"></i> Achat</a>
                            <a href="#" class="btn btn-warning"><i class="fad fa-money-bill-alt"></i> Vente</a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>

{% endblock %}
